{
    plugins: [
      "react"
    ],
    settings: {
        react: {
          pragma: "React",
          version: "0.14.8"
        }
    },
    parserOptions: {
      ecmaVersion: 7,
      sourceType: module,
      ecmaFeatures: {
        jsx: true,
        experimentalObjectRestSpread: true
      }
    },
    env:{
        browser: true,
        node: true,
        mocha: true
    },
    rules: {
        // Possible Errors
        comma-dangle: [2, "never"],
        no-cond-assign: [2, "always"],
        no-console: 1,
        no-constant-condition: 2,
        no-dupe-args: 2,
        no-dupe-keys: 2,
        no-duplicate-case: 2,
        no-empty: 2,
        no-extra-parens: 2,
        no-extra-semi: 2,
        no-func-assign: 2,
        no-irregular-whitespace: 2,
        no-obj-calls: 2,
        no-unreachable: 2,
        // Best Practices
        complexity: [2, 5],
        curly: [2, "all"],
        default-case: 2,
        no-alert: 2,
        no-else-return: 2,
        no-eq-null: 2,
        no-fallthrough: 2,
        no-implicit-coercion: 1,
        no-lone-blocks: 2,
        no-loop-func: 2,
        no-multi-str: 2,
        no-new: 2,
        no-param-reassign: 2,
        no-redeclare: 2,
        no-unused-expressions: 2,
        vars-on-top: 2,
        yoda: [2, "never"],
        // Variables
        no-catch-shadow: 2,
        no-shadow: 2,
        no-undef: 2,
        no-undef-init: 2,
        no-unused-vars: [2, { "vars": "all", "args": "after-used" }],
        no-use-before-define: 2,
        // ECMAScript 6
        no-const-assign: 2,
        // Stylistic Issues,
        id-length: [2, { "min": 1, "max": 20 }],
        indent: [2, 4],
        jsx-quotes: 2,
        max-depth: [2, 8],
        max-len: [2, 100, 4, { ignoreComments: true, ignoreUrls: true }],
        max-params: [2, 5],
        max-statements: [2, 30],
        new-cap: 2,
        new-parens: 2,
        no-lonely-if: 2,
        no-mixed-spaces-and-tabs: 2,
        no-multiple-empty-lines: [2, {"max": 2}],
        no-nested-ternary: 2,
        no-trailing-spaces: 2,
        no-unneeded-ternary: 2,
        quotes: [2, "single"],
        // Node.js and CommonJS
        no-mixed-requires: 1,
        react/jsx-no-undef: 2,
        react/jsx-uses-react: 2,
        react/jsx-uses-vars: 2,
        react/jsx-no-duplicate-props: 2,
        react/no-did-mount-set-state: 2,
        react/no-did-update-set-state: 2,
        react/no-direct-mutation-state: 2,
        react/no-is-mounted: 2,
        react/prefer-es6-class: 2,
        react/prop-types: [2,{ignore:["children","classname"]}],
        react/no-deprecated: 2,
        react/forbid-prop-types: [2, { forbid: ["any", "array"] }],
        react/react-in-jsx-scope: 2,
        react/self-closing-comp: 2,
        react/wrap-multilines: 2
    }
}
